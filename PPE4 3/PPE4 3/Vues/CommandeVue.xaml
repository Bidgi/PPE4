<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PPE4_3.Vues.CommandeVue">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Récapitulatif" TextColor="Black" FontSize="14" Margin="26,0,0,0"/>
            <Grid HeightRequest="110" BindingContext="{Binding LeRestaurant}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Text="Type de cuisines :" TextColor="Black" FontSize="16" Margin="15,8,0,0"/>
                <Label Grid.Row="1" Text="{Binding TypeCuisinefull}" TextColor="Black" FontSize="14" Margin="26,0,0,8"/>
                <Label Grid.Row="2" Text="Adresse :" TextColor="Black" FontSize="16" Margin="15,0,0,0"/>
                <Label Grid.Row="3" Text="{Binding Adressefull}" TextColor="Black" FontSize="14" Margin="26,0,0,0"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Contact :" TextColor="Black" FontSize="16" Margin="15,8,0,0"/>
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding Mail}" TextColor="Black" FontSize="14" Margin="26,0,0,0"/>
                <Label Grid.Row="2" Grid.Column="1" Text="{Binding Telephone}" TextColor="Black" FontSize="14" Margin="26,0,0,0"/>
            </Grid>
            <Label Text="Plat :" TextColor="Black" FontSize="18" Margin="15,10,0,0"/>
            <CollectionView ItemsSource="{Binding LesPlats}" ItemsUpdatingScrollMode="KeepScrollOffset">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Span="1" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.ColumnSpan="3" Text="{Binding Libelle}" VerticalOptions="Center" HorizontalOptions="Start" FontSize="18" TextColor="Black"/>
                            <Label Grid.Column="4" Text="{Binding Prix}" VerticalOptions="Center" FontSize="15" TextColor="Black" HorizontalOptions="End" Margin="0,0,10,0"/>
                            <Label Grid.Column="4" Text="€" VerticalOptions="Center" FontSize="15" TextColor="Black" HorizontalOptions="End"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <FlexLayout>
                <Label Text="A emporter ?" TextColor="Black" FontSize="18" VerticalOptions="Center" Margin="15,0,15,0"/>
                <Switch OnColor="Green" ThumbColor="#00c8ff" IsToggled="{Binding Emporter}" VerticalOptions="Center" />
            </FlexLayout>
            <Grid VerticalOptions="End">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Button Text="Recapitulatif" BackgroundColor="#00c8ff" FontSize="15" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,0,0,10" Command="{Binding CommandeButtonCommande}"/>
                <Label Grid.Column="2" Text="Total :" FontSize="15" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Start" Margin="10,0,0,10"/>
                <Label Grid.Column="3" Text="{Binding TotalPrixCommande}" FontSize="15" TextColor="Black" VerticalOptions="Center" HorizontalOptions="End" Margin="0,0,10,10"/>
                <Label Grid.Column="3" Text="€" FontSize="15" TextColor="Black" VerticalOptions="Center" HorizontalOptions="End" Margin="0,0,0,10"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>